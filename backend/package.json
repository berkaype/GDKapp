{
  "name": "bufe-yonetim-backend",
  "version": "1.0.0",
  "description": "Bufe Yonetim Sistemi Backend API",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:assets": "node ../scripts/prepare-public.js",
    "build:exe": "npm run build:assets && pkg .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "bufe",
    "restaurant",
    "pos",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "server.js"
    ],
    "assets": [
      "public/**/*",
      "bufe.db",
      "node_modules/sqlite3/build/Release/node_sqlite3.node",
      "node_modules/sqlite3/lib/binding/**/*",
      "node_modules/bcrypt/lib/binding/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "../release"
  }
}
